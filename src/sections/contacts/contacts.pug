                    a(href="tel:+78001201204")
                        img.icons-tel(src="wp-content/themes/twentytwenty-child/img/icons/phone.svg", alt="phone")
                .tel__contact
                    a.numbers(href="tel:+78001201204") + 7 800 120-12-04
            include ../../blocks/email/email.pug
            
        .contact__map.map#map
            script(type="text/javascript" charset="utf-8" defer src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Ac0d3951eeb33b1c6d7de4ccaaa2e590ad74b4a9f818436051fda3d506a54424a&amp;width=100%25&amp;height=450&amp;lang=ru_RU&amp;scroll=true?speed=0")
